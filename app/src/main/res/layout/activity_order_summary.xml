<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".OrderSummary">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="432dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        tools:ignore="MissingConstraints">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Food Item"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="50dp"
                android:text="Quantity"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="20dp"
                android:text="Price"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

        </TableRow>


        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Sandwiches"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sandwichQuantity"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="50dp"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sandwichPrice"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

        </TableRow>


        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Drinks"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/drinkQuantity"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="50dp"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/drinkPrice"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Snacks"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/snackQuantity"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="50dp"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/snackPrice"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

        </TableRow>

        <TableRow android:layout_marginTop="70dp">

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="50dp"
                android:text="Total"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25dp" />

        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>